<table class="table table-inverse table-striped">
  <thead class="thead-default">
    <tr>
      <th style="width: 20%">
        <%= 'Sender' if params[:direction] == 'in' %>
        <%= 'Recipient' if params[:direction] == 'out' %>
      </th>
      <th>Content</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td rowspan="2"><%= connection.sender.name %></td>
      <td><%= connection.initial.content %></td>
    </tr>
    <tr>
      <td><%= connection.reply.nil?? nil : connection.reply.content %></td>
    </tr>
  </tbody>
</table>
